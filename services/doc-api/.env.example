# Node Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/doclib

# Redis
REDIS_URL=redis://localhost:6379

# S3-Compatible Storage Configuration
# Development (MinIO): Use values below
# Production (GCS): See DEPLOYMENT_GCP.md for GCS HMAC setup
#   S3_ENDPOINT=https://storage.googleapis.com
#   S3_ACCESS_KEY=<GCS_HMAC_ACCESS_KEY>
#   S3_SECRET_KEY=<GCS_HMAC_SECRET>
#   S3_BUCKET=<your-gcs-bucket-name>
#   S3_REGION=us-central1
#   S3_FORCE_PATH_STYLE=false
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=admin
S3_SECRET_KEY=password
S3_BUCKET=documents
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# API Configuration
UPLOAD_URL_EXPIRY=3600
DOWNLOAD_URL_EXPIRY=3600
MAX_FILE_SIZE=104857600
